<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
	<script>
		function ins_isEmpty(event) {
			let domain =  document.querySelector("#ins_form");
			if (!domain.value){
				alert("등록할 도메인 입력해주세요.");
				return false;
			}
			alert(domain.value);
			return true;
		}
		
		function del_isEmpty(event) {
			let domain =  document.querySelector("#del_form");
			if (!domain.value){
				alert("삭제할 도메인 입력해주세요.");
				return false
			}
			return true;
		}
		
	</script>

  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">
            <form action = "/setting" method = "post" onsubmit="return ins_isEmpty();">
		    <ul>
		        <p>
		        <input id = "ins_form" type = "text" name = "Ins_domain" placeholder = "추가할 도메인" autocomplete = "off">
		        <input type="submit" value = "입력">
		        </p>
		    </ul>
            </form>
            <form action = "/setting" method = "post" onsubmit="return del_isEmpty()">
		    <ul>
		        <p>
		        <input id = "del_form" type = "text" name = "Del_domain" placeholder = "삭제할 도메인" autocomplete = "off">
		        <input type="submit" value = "입력">
		        </p>
		    </ul>
            </form>
	
      <div class="jumbotron">
            <table>
		  <tr>
		    <th>Block</th>
		    <th>서버 IP</th>
		    <th>차단할 도메인</th>
		  </tr>
		  <% log_data.forEach(item => {%>
		  <tr>
		  	<td><%=item.block_no%></td>
		  	<td><%=item.ipv4%></td>
			<td><%=item.domain_name%></td>
                  </tr>
                  <% }); %>
  		 </table>
      </div>

    </div>
  </body>
</html>
