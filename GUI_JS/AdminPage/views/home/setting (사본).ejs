<!DOCTYPE html>
<html>
	<head>
		<%- include('../partials/head') %>
	<script>
		function ins_isEmpty(event) {
			let domain =  document.querySelector("#ins_form");
			if (!domain.value){
				alert("등록할 도메인 입력해주세요.");
				return false;
			}
			return true;
		}
		function del_isEmpty(event) {
			let domain =  document.querySelector("#del_form");
			if (!domain.value){
				alert("삭제할 도메인 입력해주세요.");
				return false
			}
			return true;
		}
		
	</script>

	</head>
	<body>
		<%- include('../partials/nav') %>

		<div class="container mb-3">
		<form class = "form" action = "/setting" method = "post" 						onsubmit="return ins_isEmpty();">
			<ul>
			<p>
				<input class = "input" id = "ins_form" type = "text" name = "Ins_domain" 					placeholder = "추가할 도메인" autocomplete = "off">
				<input class = "submit" type="submit" value = "입력">
			</p>
			</ul>
		</form>
		<form class = "form" action = "/setting" method = "post" 						   onsubmit="return del_isEmpty()">
			<ul>
			<p>
				<input class = "input" id = "del_form" type = "text" name = "Del_domain" 					placeholder = "삭제할 도메인" autocomplete = "off">
				<input class = "submit" type="submit" value = "입력">
			</p>
			</ul>
		</form>
	
		<div class="jumbotron">
		<table>
		
            	<thead>
			<tr>
				<th>차단할 도메인</th>
				<th>추가 일시</th>
			</tr>
		</thead>
		
		<tbody>
			<% log_data.forEach(item => {%>
			<tr>
				<td><%=item.domain_name%></td>
				<td><%=item.created_at%></td>
			</tr>
			<% }); %>
		</tbody>
		
		</table>
		</div>
		</div>
	</body>
</html>
